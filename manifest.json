{
  "manifest_version": 3,
  "name": "ClienteSatisfeito + AreaPartner SOFTCOM",
  "version": "1.0",
  "description": "Automatiza processos repetitivos.",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://areapartner.softcomsistemas.com.br/*",
    "https://chat.clientesatisfeito.com.br/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClienteSatisfeito + AreaPartner SOFTCOM",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.clientesatisfeito.com.br/*"],
      "js": [
        "utils.js",

        "components/button.js",
        "html-identifiers.js",
        "content-chat.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://areapartner.softcomsistemas.com.br/*"],
      "js": ["utils.js", "html-identifiers.js", "content-partner.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
